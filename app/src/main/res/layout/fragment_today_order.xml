<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_dorttt_01"
    tools:context=".fragments.TodayOrderFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="10dp"
        android:id="@+id/dashAppbar">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/dash_toolbar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Order"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="25sp"
                    android:id="@+id/dashBoardLabel"
                    android:layout_gravity="center"/>
            </LinearLayout></com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/search">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todaysOrderRv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:background="@drawable/edit_text_style"
        android:layout_below="@+id/dashAppbar"
        android:hint="Search here..."
        android:fontFamily="@font/quicksand"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:padding="5dp"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:id="@+id/search"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        app:backgroundTint="@color/red"
        app:tint="#ffff"
        android:id="@+id/fab"
        android:src="@drawable/ic_baseline_add_24"/>


</RelativeLayout>